<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to the BMI Calculator!" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
        </Frame>
        <Label Text="Let's get started..." FontSize="20" TextColor="Black" Padding="30,10,30,10"/>
        <Editor x:Name="Inp_height" Placeholder="Please enter height in inches" PlaceholderColor="Gray" BackgroundColor="Yellow" />
        <Editor x:Name="Inp_weight" Placeholder="Please enter weight in pounds" PlaceholderColor="Gray" BackgroundColor="Yellow" />
        <Button Text="Click to Calculate BMI" x:Name="Btn_BMI" Clicked="Btn_Clicked" />
        <Label Text= "Your BMI is ..." x:Name="Lbl_BMI" FontSize="36" TextColor="Purple" />
        
        
    </StackLayout>

</ContentPage>
